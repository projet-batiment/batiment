package fr.insa.dorgli.projetbat.ui.gui;

import fr.insa.dorgli.projetbat.core.Config;
import fr.insa.dorgli.projetbat.core.Controller;
import fr.insa.dorgli.projetbat.ui.TUI;
import javafx.scene.layout.BorderPane;
import javafx.scene.control.Button;
import javafx.scene.control.Label;	
import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;

public class OutilsLeft extends VBox {

    private ToggleButton bSelect;
    private ToggleButton bCoin;
    private ToggleButton bMur;

    public OutilsLeft() {
        this.bSelect = new ToggleButton("select");
        this.bCoin = new ToggleButton("coin");
        this.bMur = new ToggleButton("Mur");

        ToggleGroup gBoutons = new ToggleGroup();
        this.bSelect.setToggleGroup(gBoutons);
        this.bCoin.setToggleGroup(gBoutons);
        this.bMur.setToggleGroup(gBoutons);
        this.bCoin.setSelected(true);

        this.getChildren().addAll(this.bSelect,this.bCoin,this.bMur);
   }
}
